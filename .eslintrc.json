{
	"env": {
		"node": true,
		"es2021": true
	},
	"extends": "eslint:recommended",
	"plugins": ["prettier"],
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"rules": {
		"prettier/prettier": [
			"warn",
			{},
			{
				"usePrettierrc": true
			}
		],
		"class-methods-use-this": "off",
		"no-param-reassign": "off",
		"camelcase": "off",
		"no-unused-vars": ["warn", { "argsIgnorePattern": "next" }]
	}
}
